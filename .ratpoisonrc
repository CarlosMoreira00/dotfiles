escape C-b
set startupmessage 0
exec /usr/bin/rpws init 9 -k 
exec nitrogen --restore

# MOUSE
exec ratpoison -c "banish"

# BINDS
bind j focusdown
bind h focusleft
bind k focusup
bind l focusright

bind q kill

bind t exec xfce4-terminal

bind q kill

bind f only

bind R restart

bind r resize

bind d exec rofi -show run
 


# DIALOG BOX
rudeness 13
warp on
set wingravity center
set transgravity center
set border 4 
set barborder 3 
set barpadding 1 1
set padding 0 22 0 0
set bargravity center
set bgcolor #000000
set fgcolor #477d8f
set fwcolor #477d8f
set bwcolor #000000

# BAR
exec i3status | dzen2 -p

# RPWS (ratpoison workspaces) #
bind 1 exec rpws 1
bind 2 exec rpws 2
bind 3 exec rpws 3

# Move window in workspaces
bind H exec rpws moveprev
bind L exec rpws movenext
